KAFKA_TAG=7.5.1-ccs                  # Confluent Platform compatibility
POSTGRES_TAG=16.2-alpine3.19         # Latest stable 16.x with Alpine for resource efficiency

# ELK Stack (matching versions for compatibility)
ELASTIC_TAG=8.12.2                   # Latest stable 8.x
