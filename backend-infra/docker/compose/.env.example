# Shared .env example for AquaStream
# Copy one of .env.dev.example/.env.stage.example/.env.prod.example to ".env" and adjust values.

POSTGRES_DB=aquastream
POSTGRES_USER=aquastream
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_PORT=5432
DB_HOST=postgres
DB_PORT=5432
DB_NAME=${POSTGRES_DB}
DB_USER=${POSTGRES_USER}
DB_PASSWORD=${POSTGRES_PASSWORD}

REDIS_PASSWORD=CHANGE_ME
REDIS_PORT=6379
REDIS_HOST=redis

MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=CHANGE_ME
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=${MINIO_ROOT_USER}
S3_SECRET_KEY=${MINIO_ROOT_PASSWORD}

JWT_SECRET=CHANGE_ME
TELEGRAM_BOT_TOKEN=
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=

GATEWAY_CORS_ALLOWED_ORIGINS=http://localhost:3000
SPRING_PROFILES_ACTIVE=stage

GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME

# MinIO bootstrap settings
MINIO_BOOTSTRAP_BUCKETS=aquastream-media
MINIO_BUCKET_PUBLIC=false

# Media service storage config
APP_MEDIA_STORAGE_ENDPOINT=http://minio:9000
APP_MEDIA_STORAGE_ACCESSKEY=minio
APP_MEDIA_STORAGE_SECRETKEY=CHANGE_ME
APP_MEDIA_STORAGE_BUCKETNAME=aquastream-media
