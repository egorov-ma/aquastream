<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Properties -->
    <springProperty scope="context" name="serviceName" source="spring.application.name" defaultValue="event-service"/>
    <springProperty scope="context" name="logLevel" source="aquastream.logging.level.root" defaultValue="INFO"/>
    <springProperty scope="context" name="structuredEnabled" source="aquastream.logging.structured.enabled" defaultValue="true"/>
    
    <!-- Console Appender for Development (Pattern) -->
    <appender name="CONSOLE_DEV" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{correlationId:-NO_ID}] [%logger{36}] - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
    </appender>
    
    <!-- Console Appender for Production (JSON) -->
    <appender name="CONSOLE_PROD" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"service":"${serviceName}"}</customFields>
            <fieldNames>
                <timestamp>@timestamp</timestamp>
                <message>message</message>
                <level>level</level>
                <thread>thread</thread>
                <logger>logger</logger>
            </fieldNames>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${logLevel}</level>
        </filter>
    </appender>
    
    <!-- Async Appender for better performance -->
    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>256</queueSize>
        <includeCallerData>false</includeCallerData>
        <springProfile name="!dev,!test">
            <appender-ref ref="CONSOLE_PROD"/>
        </springProfile>
        <springProfile name="dev,test">
            <appender-ref ref="CONSOLE_DEV"/>
        </springProfile>
    </appender>
    
    <!-- Loggers -->
    
    <!-- Application loggers -->
    <logger name="org.aquastream.event" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>
    
    <!-- Framework loggers -->
    <logger name="org.springframework" level="WARN" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>
    
    <logger name="org.springframework.kafka" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>
    
    <logger name="net.devh.boot.grpc" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>
    
    <logger name="io.grpc" level="WARN" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>
    
    <!-- Database loggers -->
    <logger name="org.hibernate" level="WARN" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>
    
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <springProfile name="dev">
            <appender-ref ref="ASYNC_CONSOLE"/>
        </springProfile>
    </logger>
    
    <!-- Security -->
    <logger name="org.springframework.security" level="WARN" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>
    
    <!-- Health checks (reduce noise) -->
    <logger name="org.springframework.boot.actuate.endpoint.web.servlet" level="WARN" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>
    
    <!-- Root logger -->
    <root level="${logLevel}">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </root>
    
    <!-- Development profile specific settings -->
    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="ASYNC_CONSOLE"/>
        </root>
    </springProfile>
    
    <!-- Test profile specific settings -->
    <springProfile name="test">
        <root level="WARN">
            <appender-ref ref="ASYNC_CONSOLE"/>
        </root>
    </springProfile>
    
</configuration>"